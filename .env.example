# ========================================
# CONFIGURACIÓN DE EJEMPLO - RENOMBRAR A .env
# ========================================

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/whatsapp_sentiment
MONGO_DB_NAME=whatsapp_sentiment
MONGO_COLLECTION_MENSAJES=mensajes

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Google Gemini AI
GEMINI_API_KEY=tu_api_key_aqui
GEMINI_MODEL=gemini-2.0-flash-exp

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# Logging
LOG_LEVEL=INFO

# CORS Configuration
# En desarrollo: '*'
# En producción: 'https://tu-frontend.vercel.app'
CORS_ORIGINS=*

# Socket.IO Configuration (para producción)
# En desarrollo: '*'
# En producción: 'https://tu-frontend.vercel.app'
SOCKETIO_CORS_ORIGINS=*
SOCKETIO_ASYNC_MODE=eventlet

# Twilio WhatsApp (Opcional)
TWILIO_ACCOUNT_SID=tu_account_sid
TWILIO_AUTH_TOKEN=tu_auth_token

# Docker Configuration
DOCKER_COMMAND=gunicorn --config gunicorn_config.py src.main:app
DOCKER_PORT=8080
DOCKER_LIMITS_MEMORY=1024M
DOCKER_LIMITS_CPUS=1.0
